{% extends 'base.html.twig' %}

{% block title %}{{ 'leave_request.manage.browser.title'|trans }}{% endblock %}

{% block body %}
<div class="container-sm mt-5">
    <div class="row col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xs-12">
        <h1 class="fs-3 text">{{ 'leave_request.manage.page.title'|trans }}</h1>
        <div class="mb-2">
        {{ include('leave_request/partial/_leave_request_item.html.twig', {'leaveRequest': leaveRequest, 'withActions': false}) }}
        {% if leaveRequest.requestComment is not null %}
            <div class="fst-italic">{{ leaveRequest.requestComment }}</div>
        {% endif %}
        </div>
        {{ form_start(form)}}

        <div class="mb-3">
            {{ form_label(form.responseComment, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.responseComment, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="text-center mt-4">
            <a class="btn btn-secondary px-4 px-xs-5 mx-1" href="{{ path('app_user_show_leave', {'user': leaveRequest.user.id}) }}">
                {{'leave_request.form.cancel.label'|trans }}
            </a>
            {{ form_widget(form.submitAccept, {'attr': {'class': 'btn btn-success px-4 px-xs-5 mx-1'}}) }}
            {{ form_widget(form.submitReject, {'attr': {'class': 'btn btn-danger px-4 px-xs-5 mx-1'}}) }}
        </div>
        {{ form_end(form)}}
    </div>
</div>
{% endblock %}
