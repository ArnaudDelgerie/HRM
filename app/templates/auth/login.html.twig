{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login.browser.title'|trans }}{% endblock %}

{% block body %}
<div class="container-sm mt-5">
    <div class="row col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xs-12">
    <h1 class="fs-3 text">{{ 'auth.login.page.title'|trans }}</h1>
    <form class="mt-3" action="{{ path('app_auth_login') }}" method="post">
        {% if error %}
            <div class="mb-3 alert alert-danger">{{ error.messageKey|trans }}</div>
        {% endif %}
        <input type="hidden" name="_target_path" value="/">

        <div class="mb-3">
            <label class="form-label" for="username">{{ 'auth.login.form.email'|trans }}</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="password">{{ 'auth.login.form.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password" required>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-primary px-5" type="submit">{{ 'auth.login.form.submit'|trans }}</button>
        </div>
    </form>
</div>
{% endblock %}
