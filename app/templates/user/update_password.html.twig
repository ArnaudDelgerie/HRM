{% extends 'base.html.twig' %}

{% block title %}{{ 'user.update_password.browser.title'|trans }}{% endblock %}

{% block body %}
<div class="container-sm mt-5">
    <div class="row col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xs-12">
        <h1 class="fs-3 text">{{ 'user.update_password.page.title'|trans }}</h1>
        {{ form_start(form, {'attr': {'class': 'mt-3'}})}}
        <div class="mb-3">
            {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            {% if form.plainPassword.first.vars.errors|length > 0 %}
            <p class="text-danger">{{ form.plainPassword.first.vars.errors[0].message }}</p>
            {% endif %}
        </div>
        <div class="text-center mt-4">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary px-4 px-xs-5 mx-1'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
